<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="NewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkgrey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="textBig" >
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="text" >
        <!--<item name="android:textAlignment">justify</item>-->
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="question">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">@dimen/font2_size</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="radiobutton">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <style name="sources">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="quiz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">50dp</item>

    </style>



</resources>
